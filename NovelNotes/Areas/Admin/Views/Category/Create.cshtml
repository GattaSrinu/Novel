@model Novel.Models.Category




<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
     <div class="row"
      <div class="col-12">
        <h2 class="text-white text-center py-2">Create Category</h2>
      </div>
      </div> 
  <div class="card-body p-4">
    <form method="post" class="row">
        <div asp-validation-summary="All"> </div>
        <div class="border pt-3 mt-4">
            <div class="row pb-2">
            </div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control border-2 shadow-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <textarea asp-for="DisplayOrder" class="form-control border-2 shadow-sm"></textarea>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-group" style="width:150px">Create</button>
                </div>
                <div class="col-6">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-info form-group" style="width:200px">Back To List</a>
                </div>
            </div>
    </form>   
    </div>
    </div>
 </div>




  @section Scripts {
      @{
    <partial name="_ValidationScriptsPartial" />
      }
  }