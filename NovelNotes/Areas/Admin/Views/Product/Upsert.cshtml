@model ProductVM

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient py-3">
            <h2 class="text-white text-center py-2">@(Model.Product.Id!=0?"Update ":"Create ") Product</h2>
        </div>

        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                  <input asp-for="Product.Id" hidden />

                <div class="row">
                    <div class="col-9">
                        <div class="form-group mb-3">
                            <label asp-for="Product.Title" class="form-label"></label>
                            <input asp-for="Product.Title" class="form-control border-2 shadow-sm" />
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.Description" class="form-label"></label>
                            <textarea asp-for="Product.Description" class="form-control border-2 shadow-sm"></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.ISBN" class="form-label"></label>
                            <input asp-for="Product.ISBN" class="form-control border-2 shadow-sm" />
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.Author" class="form-label"></label>
                            <input asp-for="Product.Author" class="form-control border-2 shadow-sm" />
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.ListPrice" class="form-label"></label>
                            <input asp-for="Product.ListPrice" class="form-control border-2 shadow-sm" />
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.Price" class="form-label"></label>
                            <input asp-for="Product.Price" class="form-control border-0 shadow-sm" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.Price50" class="form-label"></label>
                            <input asp-for="Product.Price50" class="form-control border-2 shadow-sm" />
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.Price100" class="form-label"></label>
                            <input asp-for="Product.Price100" class="form-control border-2 shadow-sm" />
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.CategoryId" class="form-label"></label>
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-2 shadow-sm">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Product.ProductImages" class="form-label"></label>
                            <input type="file" name="files" class="form-control border-2 shadow-sm" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary w-100">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary w-100">Create</button>
                                }
                            </div>
                            <div class="col-md-6 mb-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-info w-100">Back To List</a>
                            </div>
                        </div>
                    </div>
                        
                   <div class="col-3">
                        @if (Model.Product.ProductImages != null)
                        {
                            foreach (var image in Model.Product.ProductImages)
                            {
                                <div class="border p-1 m-2 text-center">
                                    <img src="@image.ImageUrl" width="100%"
                                         style="border-radius:5px; border:1px solid #bbb9b9" />
                                    <a asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@image.Id">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
               
            </form>
        </div>
    </div>
</div>


